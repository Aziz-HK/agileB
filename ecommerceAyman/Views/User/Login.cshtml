@model ecommerceAyman.Models.LoginViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card p-4 shadow" style="width: 100%; max-width: 400px; border: 1px solid #000000;">
        <div class="text-center mb-4">
            <h2 class="text-danger">Login</h2>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label text-black"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label text-black"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-danger">Login</button>
            </div>
        </form>

        <hr class="my-4" />

        <div class="text-center">
            <p class="mb-1">Don't have an account?</p>
            <a href="@Url.Action("Register", "User")" class="btn btn-outline-danger">Register</a>
        </div>
    </div>
</div>

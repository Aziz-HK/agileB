@{
    ViewData["Title"] = "Welcome to Tunivision!";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        color: #000000;
    }

    /* Container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    .header {
        text-align: center;
        padding: 30px 0;
        border-bottom: 2px solid #000000;
    }

        .header h1 {
            font-size: 36px;
            color: #000000;
        }

        .header .highlight {
            color: #ff0000;
        }

        .header p {
            font-size: 18px;
            color: #333333;
        }

    /* Main Layout */
    .main-layout {
        display: flex;
        margin-top: 20px;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        background-color: #000000;
        color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        margin-right: 20px;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            margin: 15px 0;
        }

        .sidebar a {
            color: #ffffff;
            text-decoration: none;
            font-size: 16px;
        }

            .sidebar a:hover {
                text-decoration: underline;
            }

    /* Content Area */
    .content {
        flex: 1;
        padding: 20px;
        background-color: #f9f9f9;
        border: 2px solid #000000;
        border-radius: 5px;
    }

        .content p {
            font-size: 18px;
            color: #333333;
            margin-bottom: 20px;
        }

    /* Buttons */
    .buttons {
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 10px;
    }

    .visitor-btn {
        background-color: #ffffff;
        color: #000000;
        border: 2px solid #000000;
        transition: 0.3s ease;
    }

        .visitor-btn:hover {
            background-color: #000000;
            color: #ffffff;
        }

    .login-btn {
        background-color: #ff0000;
        color: #ffffff;
        border: 2px solid #ff0000;
        transition: 0.3s ease;
    }

        .login-btn:hover {
            background-color: #ffffff;
            color: #ff0000;
            border: 2px solid #ff0000;
        }
</style>

<div class="container">
    <!-- Header Section -->
    <div class="header">
        <h1>Welcome to <span class="highlight">Tunivision</span></h1>
        <p>Explore, connect, and be part of our vibrant community.</p>
    </div>

    <!-- Sidebar and Content Section -->
    <div class="main-layout">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Community</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content">
            <p>Welcome to Tunivision, where you can join a growing community and stay updated with the latest trends.</p>
            <div class="buttons">
                <a href="@Url.Action("Index", "Product")" class="btn visitor-btn">Visitor</a>
                <a href="@Url.Action("Login", "User")" class="btn login-btn">Se Connecter</a>
            </div>
        </div>
    </div>
</div>
